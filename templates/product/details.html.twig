{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('list_product') }}" class="btn btn-default">Back to Product List</a>
    <div class="container">

        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Laptop</h3>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center"><img src="{{ asset('upload/productImage/' ~ products.Image) }}" class="img-responsive"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h4 class="box-title mt-5">Product description</h4>
                        <p>{{ products.Description }}</p>
                        <h2 class="mt-5" style="color: #B0413E">
                            $<small class="text-success">{{ products.Price }}</small>
                        </h2>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">General Info</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-product">
                                <tbody>
                                <tr>
                                    <td width="390">Computer configuration</td>
                                    <td>{{ products.Notes }}</td>
                                </tr>
                                <tr>
                                    <td width="390">Create Date</td>
                                    <td> {{ products.CreateDate|date('F j,Y, g:i a') }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{#    Phai them s vao sau chu product#}
{#    <p>{{ products.description }}</p>#}

{% endblock %}
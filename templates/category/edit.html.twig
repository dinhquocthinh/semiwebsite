{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <a href="{{ path('list_category') }}" class="btn btn-default">Back to Category List</a>
    <div class="form-group">
        <label for="category">Category Name:</label>
        {{ form_widget(form.CatName,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Category name'
            }
        }) }}
    </div>


    <div class="form-group">
        <label for="due_date">Create Date</label>
        {{ form_widget(form.CreateDate,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>

    <input type="submit" name="edit_category" value="Edit" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
